{
  "entities": {
    "product": {
      "title": "Product",
      "description": "Represents a product in the marketplace.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the product."
        },
        "description": {
          "type": "string",
          "description": "The description of the product."
        },
        "initialPrice": {
          "type": "number",
          "description": "The starting price of the product for negotiation."
        },
        "lastPrice": {
          "type": "number",
          "description": "The lowest acceptable price for the product after negotiation."
        },
        "stock": {
          "type": "number",
          "description": "The available stock quantity."
        },
        "imageUrl": {
          "type": "string",
          "description": "The URL of the product image."
        },
        "sellerId": {
          "type": "string",
          "description": "The ID of the user who is selling the product."
        }
      },
      "required": ["name", "initialPrice", "lastPrice", "stock", "sellerId"]
    },
    "userProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "storeName": {
            "type": "string",
            "description": "The name of the seller's store."
        },
        "storeDescription": {
            "type": "string",
            "description": "A description of the seller's store."
        },
        "whatsappNumber": {
            "type": "string",
            "description": "The seller's WhatsApp Business number."
        }
      },
      "required": ["displayName", "email"]
    },
    "deliveryLocation": {
        "title": "Delivery Location",
        "description": "A location where a seller can deliver products.",
        "type": "object",
        "properties": {
            "name": {
                "type": "string",
                "description": "The name of the location (e.g., a bus stop)."
            }
        },
        "required": ["name"]
    },
    "order": {
      "title": "Order",
      "description": "Represents a customer's order.",
      "type": "object",
      "properties": {
        "customerId": {
          "type": "string",
          "description": "The ID of the customer who placed the order."
        },
        "sellerId": {
            "type": "string",
            "description": "The ID of the seller whose products are being ordered."
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "productId": {"type": "string"},
              "name": {"type": "string"},
              "price": {"type": "number"},
              "quantity": {"type": "number"}
            },
            "required": ["productId", "name", "price", "quantity"]
          }
        },
        "total": {
          "type": "number"
        },
        "status": {
          "type": "string",
          "enum": ["Processing", "Shipped", "Delivered", "Cancelled"]
        },
        "deliveryAddress": {
            "type": "string"
        },
        "customerInfo": {
            "type": "object",
            "properties": {
                "name": {"type": "string"},
                "email": {"type": "string"},
                "phone": {"type": "string"}
            }
        },
        "createdAt": {
            "type": "string",
            "format": "date-time"
        }
      },
      "required": ["customerId", "sellerId", "items", "total", "status", "createdAt"]
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/products/{productId}": {
      "schema": {
        "$ref": "#/entities/product"
      },
      "description": "A product listed in the marketplace."
    },
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/userProfile"
      },
      "description": "A user's profile."
    },
    "/users/{userId}/deliveryLocations/{locationId}": {
        "schema": {
            "$ref": "#/entities/deliveryLocation"
        },
        "description": "A seller's available delivery location."
    },
    "/orders/{orderId}": {
        "schema": {
            "$ref": "#/entities/order"
        },
        "description": "A customer order."
    }
  }
}
